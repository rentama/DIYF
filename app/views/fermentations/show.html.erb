<div class="container">
    <div class="page-header">
        <h1 id="timeline">Fermentaions/Products</h1>
    </div>
    <ul class="timeline">
        <li>
          <div class="timeline-panel">
            <div class="timeline-heading">
              <h3 class="timeline-title"><%= @fermentation.name %></h4>
            </div>

            <% @fermentation.products.each do |product| %>
              <div class="timeline-body">
                <h4><%= link_to product.name, category_fermentation_product_path(@fermentation.category, @fermentation, product) %></h4>
              </div>
            <% end %>
          </div>
        </li>
    </ul>
</div>
